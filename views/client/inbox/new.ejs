<%- include('../../partials/head') %>
<%- include('../../partials/navbar_user') %> 

<div class=" content-space-t-2">
  <!-- Breadcrumb -->
  <div class="navbar-dark bg-dark" style="background-image: url(/public/assets/svg/components/wave-pattern-light.svg);">
    <div class="container content-space-1 content-space-b-lg-3">
      <div class="row align-items-center">
        <div class="col">
          <div class="d-lg-block">
            <h1 class="h2 text-white">Inbox</h1>
          </div>

          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-light mb-0">
              <li class="breadcrumb-item"> 
                <%= user.addy.address1 %> #<b><%= user.mailbox %></b>, <%= user.addy.city %>, <%= user.addy.state %>   
              </li>
            </ol>
          </nav>
          <!-- End Breadcrumb -->
        </div>
        <!-- End Col -->

        <div class="col-auto">


          <!-- Responsive Toggle Button -->
          <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarNav" aria-controls="sidebarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-default">
              <i class="bi-list"></i>
            </span>
            <span class="navbar-toggler-toggled">
              <i class="bi-x"></i>
            </span>
          </button>
          <!-- End Responsive Toggle Button -->
        </div>
        <!-- End Col -->
      </div>
      <!-- End Row -->
    </div>
  </div>
  <!-- End Breadcrumb -->

  <!-- Content -->
  <div class="container content-space-1 content-space-t-lg-0 content-space-b-lg-2 mt-lg-n10">
    <div class="row">
      <div class="col-lg-3">
        <!-- Navbar -->
        <div class="navbar-expand-lg navbar-light">
          <div id="sidebarNav" class="collapse navbar-collapse navbar-vertical">
            <!-- Card -->
            <div class="card flex-grow-1 mb-5">
              <div class="card-body">

                
                
                <!-- Nav -->
                <span class="text-cap">Categories</span>

                <!-- List -->
                <ul class="nav nav-sm nav-tabs nav-vertical">
                  <li class="nav-item">
                    <a class="nav-link active" href="/client/inbox/new">
                      <i class="bi-box nav-icon"></i>
                      <span class="me-2">New packages</span><span class="badge text-dark border rounded-pill">
                        <%= user.totalNew %>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/client/inbox/pending">
                      <i class="bi-hourglass-split nav-icon"></i>
                      <span class="me-2">Pending forward</span><span class="badge text-dark border rounded-pill">
                        <%= user.totalPending %>
                      </span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/client/inbox/forwarded">
                      <i class="bi-forward-fill nav-icon"></i>
                      <span class="me-2">Forwarded</span><span class="badge text-dark border rounded-pill">
                        <%= user.totalForwarded %>
                      </span>
                    </a>
                  </li>
                </ul>
                <!-- End List -->





              </div>
            </div>
            <!-- End Card -->
          </div>
        </div>
        <!-- End Navbar -->
      </div>
      <!-- End Col -->

      <div class="col-lg-9">
        <div class="d-grid gap-3 gap-lg-5">
          <!-- Card -->
          <div class="card">
            <div class="card-header border-bottom">
              <h4 class="card-header-title">New packages</h4>
              <p class="card-text">Newly arrived packages will show up here. Please submit forward request wthin three days of upload by your forwarder.</p>

            </div>

            <!-- Body -->
            <div class="card-body">
              <%- include('../../partials/flash') %> 

              <div class="d-grid gap-5 mb-10">

                <% for (let p of user.packages) { %>     
                <% if (p.status != 'NEW') { continue; } %> 
                <%- include('./pkg', {p}) %> 
  
              <% } %> 
  
            </div>
            </div>
            <!-- End Body -->


          </div>
          <!-- End Card -->




        </div>
      </div>
      <!-- End Col -->
    </div>
    <!-- End Row -->
  </div>
  <!-- End Content -->
</div>

