<%- layout('layouts/boilerplate') %> 

<div class=" content-space-t-2">
  <!-- Breadcrumb -->
  <div class="navbar-dark bg-dark" style="background-image: url(/public/assets/svg/components/wave-pattern-light.svg);">
    <div class="container content-space-1 content-space-b-lg-3">
      <div class="row align-items-center">
        <div class="col">
          <div class="d-none d-lg-block">
            <h1 class="h2 text-white">Dashboard</h1>
          </div>

          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-light mb-0">
              <li class="breadcrumb-item"><%= user.addy.address1 %> </li>
              <li class="breadcrumb-item active" aria-current="page">Overview</li>
            </ol>
          </nav>
          <!-- End Breadcrumb -->
        </div>
        <!-- End Col -->

        <div class="col-auto">


          <!-- Responsive Toggle Button -->
          <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarNav" aria-controls="sidebarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-default">
              <i class="bi-list"></i>
            </span>
            <span class="navbar-toggler-toggled">
              <i class="bi-x"></i>
            </span>
          </button>
          <!-- End Responsive Toggle Button -->
        </div>
        <!-- End Col -->
      </div>
      <!-- End Row -->
    </div>
  </div>
  <!-- End Breadcrumb -->

  <!-- Content -->
  <div class="container content-space-1 content-space-t-lg-0 content-space-b-lg-2 mt-lg-n10">
    <div class="row">
      <div class="col-lg-3">
        <!-- Navbar -->
        <div class="navbar-expand-lg navbar-light">
          <div id="sidebarNav" class="collapse navbar-collapse navbar-vertical">
            <!-- Card -->
            <div class="card mb-5">
              <div class="card-body">

                <div class="d-none d-lg-block text-center mb-5">
                  <div class="text-center mb-5">
                    <a class="btn btn-sm btn-block btn-primary transition-3d-hover" href="/forwarder/upload">Upload new package</a>
                  </div>
                  </div>

                
                
                <!-- Nav -->
                <span class="text-cap">Categories</span>

                <!-- List -->
                <ul class="nav nav-sm nav-tabs nav-vertical">
                  <li class="nav-item">
                    <a class="nav-link " href="/forwarder/dash/requested">
                      <i class="bi-box nav-icon"></i> Forward requested
                    </a>
                  </li>
                  <li class="nav-item ">
                    <a class="nav-link active" href="/forwarder/dash/awaiting">
                      <i class="bi-hourglass-split nav-icon"></i> Awaiting request
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link " href="/forwarder/dash/forwarded">
                      <i class="bi-forward-fill nav-icon"></i> Forwarded
                    </a>
                  </li>

                </ul>
                <!-- End List -->





              </div>
            </div>
            <!-- End Card -->
          </div>
        </div>
        <!-- End Navbar -->
      </div>
      <!-- End Col -->

      <div class="col-lg-9">
        <div class="d-grid gap-3 gap-lg-5">
          <!-- Card -->
          <div class="card">
            <div class="card-header border-bottom">
              <h4 class="card-header-title">Packages awaiting client forward request</h4>
              <p class="card-text">If your client hasn't requested within 3 days, please contact support.</p>

            </div>

            <!-- Body -->
            <div class="card-body">

              <div class="d-grid gap-5 mb-10">

                <% for (let p of user.addy.packages) { %> 
                  <% if (p.status != 'NEW') { continue;} %> 
                <!-- Card -->
                <div class="card card-bordered ">
                  <div class="card-body">
                    <!-- Media -->
                    <div class="d-sm-flex">
                      <!-- Media -->                
                      <div class="flex-grow-1">
                        <div class="row">
                          <div class="col col-md-8">
                            <div class="mb-2">
                              <a class="link-sm link-secondary" href="#">Shipper</a>
                            </div>
                            <h3 class="card-title"><%= p.shipper %> 
                              <!-- <a class="text-dark" href="/public/demo-jobs/employer.html">Package</a> -->
                            </h3>
                            <div class="mt-3">
                              <h6 class="card-title"><%= p.tracking %> 
                                <!-- <a class="text-dark" href="/">Tracking: 67398767898767890900</a> -->
                              </h6>
                            </div>
                          </div>
                          <!-- End Col -->
    
    
                          <div class="col-12 col-md mt-3 mt-md-0">
    
                            <span class="badge bg-soft-success text-success me-2 mb-2">
                              <span class="legend-indicator bg-success"></span>Forward requested
                            </span>
                            <div class="d-flex gap-2 mt-1">
                              <button type="button" class="btn btn-outline-primary btn-sm btn-transition rounded-pill"> <i class="bi-download me-1"></i>Label</button>
                              <% if (p.images.length != 0) { %> 
                              <a type="button" class="btn btn-soft-secondary btn-sm btn-transition rounded-pill media-viewer"  href="<%= p.images[0].url %>" data-fslightbox="gallerye<%=p._id %>">
                                <i class="bi-image me-1"></i>Photos
                              </a>
                              <% } %> 
                            </div>
                            <!-- <button type="button" class="d-block btn btn-outline-primary btn-sm btn-transition rounded-pill">Forward</button> -->
                          </div>
                          <!-- End Col -->
                        </div>
                        <!-- End Row -->
                      </div>
                    </div>
                    <!-- End Media -->
                  </div>
    
                  <div class="card-footer pt-0">
                    <ul class="list-inline list-separator small text-body">
                      <li class="list-inline-item"><%=p.carrier %> </li>
                      <li class="list-inline-item"><%= p.weight %> lbs</li>
                      <li class="list-inline-item">Uploaded <%= p.uploaded %> </li>
                      <li class="list-inline-item">Box: <%= p.mailbox %> </li>
                      <li class="list-inline-item">Status: <%= p.status %> </li>
                    </ul>
                    
                  </div>
                </div>
                <!-- End Card -->
    
                <% } %> 
    
              </div>
    

            </div>
            <!-- End Body -->


          </div>
          <!-- End Card -->




        </div>
      </div>
      <!-- End Col -->
    </div>
    <!-- End Row -->
  </div>
  <!-- End Content -->
</div>

