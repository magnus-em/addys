<%- layout('layouts/boilerplate') %>
    <div class="container content-space-2 content-space-lg-3">
        <div class="w-lg-75 mx-lg-auto">
            <!-- Heading -->
            <div class="text-center mb-2">
                <h1 class="h2">
                    Package upload form
                </h1>


                <p class="mb-0">Please be very careful to enter accurate data. Inaccurate entry can cause packages to be
                    assigned to the wrong user, or cause shipping issues.</p>

            </div>
            <!-- End Heading -->

            <form action="/forwarder/upload" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>

                <div class="mb-5">
                    <h4 class="my-7">Package information</h4>

                    <div class="row">

                        <div class="col-sm-6">
                            <!-- Form -->
                            <div class="mb-4">
                                <label class="form-label" for="name">Name on package (first & last)</label>
                               
                                    <input type="text" class="form-control form-control-lg" id="name"
                                        name="package[name]" required>


                            </div>
                            <!-- End Form -->
                        </div>
                        <div class="col-sm-6">
                            <!-- Form -->
                            <div class="mb-4">
                                <label class="form-label" for="mailbox">Mailbox # (double check)</label>
                                <select class="form-select mb-2" id="mailbox" name="package[mailbox]" required>
                                    <% for (let client of addy.clients) { %> 
                                        <option value="<%= client.mailbox %>"><b><%= client.mailbox %></b> (<%= client.firstName %> <%= client.lastName %>)</option>
                                    <% } %> 
                                    
                                </select>
                            </div>
                            <!-- End Form -->
                        </div>
                        <!-- End Col -->


                    </div>
                    <!-- End Row -->

                    <div class="row">


                        <div class="col-sm-6">
                            <!-- Form -->
                            <div class="mb-4">
                                <label class="form-label" for="carrier">Carrier</label>
                                <select class="form-select mb-2" id="carrier" name="package[carrier]" required>
                                    <option value="USPS">USPS</option>
                                    <option value="UPS">UPS</option>
                                    <option value="FEDEX">FEDEX</option>
                                    <option value="DHL">DHL</option>
                                    <option value="ONTRAC">ONTRAC</option>
                                </select>
                            </div>
                            <!-- End Form -->
                        </div>
                        <!-- End Col -->

                        <div class="col-sm-6">
                            <!-- Form -->
                            <div class="mb-4">
                                <label class="form-label" for="tracking">Tracking number</label>

                                <input type="text" class="form-control" name="package[tracking]" id="tracking" required>
                                <div class="invalid-feedback">Required</div>
                                <div class="valid-feedback">Looks good</div>                                
                            </div>
                            <!-- End Form -->
                        </div>
                        <!-- End Col -->

                    </div>

                    <div class="row">

                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- Form -->
                                    <div class="mb-4">
                                        <label class="form-label" for="lbs">Weight (lbs) </label>

                                        <input type="text" class="form-control form-control-lg" id="lbs"
                                            name="package[lbs]" required>
                                    </div>
                                    <!-- End Form -->
                                </div>
                                <!-- End Col -->
                                <div class="col-sm-6">
                                    <!-- Form -->
                                    <div class="mb-4">
                                        <label class="form-label" for="oz">Weight (oz)
                                        </label>
                                        <input type="text" class="form-control form-control-lg" name="package[oz]"
                                            id="oz" required>
                                        <span class="invalid-feedback">Required</span>
                                    </div>
                                    <!-- End Form -->
                                    <!-- End Form -->
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- Form -->
                                    <div class="mb-4">
                                        <label class="form-label" for="length">Length (in) </label>

                                        <input type="text" class="form-control form-control-lg" id="length"
                                            name="package[length]" required>
                                    </div>
                                    <!-- End Form -->
                                </div>
                                <!-- End Col -->
                                <div class="col-sm-4">
                                    <!-- Form -->
                                    <div class="mb-4">
                                        <label class="form-label" for="width">Width (in)
                                        </label>
                                        <input type="text" class="form-control form-control-lg" name="package[width]"
                                            id="width" required>
                                        <span class="invalid-feedback">Required</span>
                                    </div>
                                    <!-- End Form -->
                                    <!-- End Form -->
                                </div>

                                <div class="col-sm-4">
                                    <!-- Form -->
                                    <div class="mb-4">
                                        <label class="form-label" for="height">Height (in)
                                        </label>
                                        <input type="text" class="form-control form-control-lg" name="package[height]"
                                            id="height" required>
                                        <span class="invalid-feedback">Required</span>
                                        <!-- <div class="text-center">
                                          <a href='/clientform' class="card-text small">Need invite code? Get one here</a>
                                        </div> -->
                                    </div>
                                    <!-- End Form -->
                                    <!-- End Form -->
                                </div>
                            </div>
                        </div>



                    </div>
